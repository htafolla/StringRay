{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/plugin",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/index.ts",
    "src/cli/**/*.ts",
    "src/plugins/**/*.ts",
    "src/orchestrator/**/*.ts",
    "src/state/**/*.ts",
    "src/processors/**/*.ts",
    "src/enforcement/**/*.ts",
    "src/utils/**/*.ts",
    "src/agents/**/*.ts",
    "src/mcps/**/*.ts",
    "src/strray-activation.ts",
    "src/context-loader.ts",
    "src/codex-injector.ts"
  ],
  "exclude": [
    "src/cli/**/*",
    "src/server/**/*",
    "src/__tests__/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules"
  ]
}
