{
  "name": "@strray/testing-suite",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for StrRay Framework with 85%+ behavioral coverage",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:e2e": "playwright test",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:security": "vitest run --config vitest.security.config.ts",
    "test:contract": "vitest run --config vitest.contract.config.ts",
    "test:accessibility": "pa11y-ci --config accessibility.config.js",
    "test:coverage": "vitest run --coverage --reporter=verbose",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:security",
    "test:parallel": "vitest run --pool=threads --poolOptions.threads.maxThreads=4",
    "test:ci": "npm run test:coverage && npm run test:e2e && npm run test:performance",
    "generate:tests": "node scripts/generate-behavioral-tests.js",
    "mock:server": "node scripts/mock-server.js",
    "test:report": "allure generate allure-results --clean && allure open"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/k6": "^0.47.0",
    "@vitest/coverage-v8": "^4.0.16",
    "allure-vitest": "^2.9.0",
    "k6": "^0.47.0",
    "pa11y-ci": "^3.1.0",
    "supertest": "^6.3.3",
    "test-data-bot": "^0.8.0",
    "vitest": "^4.0.16",
    "faker": "^5.5.3",
    "msw": "^1.3.0"
  }
}
